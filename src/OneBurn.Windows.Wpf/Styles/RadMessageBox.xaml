    <!--  Question Styles  -->
    <Style x:Key="RadMessageBoxQuestionOKCancelStyle"
           TargetType="telerik:RadAlert">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="MinWidth" Value="275" />
        <Setter Property="MaxWidth" Value="500" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="telerik:RadAlert">
                    <Grid x:Name="LayoutRoot">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ContentControl Width="48"
                                        Height="48"
                                        Margin="16,8,8,8"
                                        VerticalAlignment="Top"
                                        Template="{StaticResource RadMessageBoxQuestionTemplate}" />
                        <ContentPresenter x:Name="AlertText"
                                          Grid.Row="0"
                                          Grid.Column="1"
                                          Margin="8,8,8,0">
                            <ContentPresenter.Resources>
                                <Style BasedOn="{StaticResource RadMessageBoxTextBlockStyle}"
                                       TargetType="{x:Type TextBlock}" />
                            </ContentPresenter.Resources>
                        </ContentPresenter>
                        <Border x:Name="HorizontalRule"
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Height="2"
                                VerticalAlignment="Top"
                                Background="Gray"
                                BorderBrush="DarkGray"
                                BorderThickness="0,0,0,1" />
                        <WrapPanel Grid.Row="1"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Right">
                            <telerik:RadButton x:Name="OK"
                                               MinWidth="70"
                                               Margin="0,10,8,8"
                                               Content="OK"
                                               IsDefault="True" />
                            <telerik:RadButton x:Name="Cancel"
                                               MinWidth="70"
                                               Margin="0,10,8,8"
                                               Content="Cancel"
                                               IsCancel="True" />
                        </WrapPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
